<div class="container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= cl_image_path('Captura_de_tela_2017-08-09_13.25.01_lsvxd4.jpg')%>); width: 100%; height: 150px;">
    <div class="banner-content">
      <h1><%= @trip.city_origin.name.upcase %> - <%= @trip.city_destination.name.upcase %></h1>
      <p><%= @trip.departure_date %></p>
    </div>
  </div>


  <center><h2>Cegonha saindo de <%= @trip.city_origin.name %>-<%= @trip.city_origin.state %> em <%= @trip.departure_date %> para <%= @trip.city_destination.name %>-<%= @trip.city_destination.state %> com previsão de chegada em <%= @trip.arrival_date %></h2></center>

  <div class="row">
    <div class="col-md-6">
      <p>Entregue seu veículo em:</p>
      <p><%= @trip.departure_address %></p>
      <p>Receba seu veículo em:</p>
      <p><%= @trip.arrival_address %></p>
    </div>
    <div class="col-md-6">
    <p>Vagas ainda disponíveis: <%= @trip.vacancies %></p>
      <p>Valor unitário: <%= @trip.price %></p>
      <p><%= @trip.truck.name %></p>
      <p><%= @trip.truck.vacancies %></p>
      <p><%= @trip.truck.user.name %></p>
    </div>
  </div>
</div>



