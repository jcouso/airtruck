<div class="row">
   <div class="col-xs-12">
      <h1>Caminhões Cadastrados</h1>
      <br>
      <%= link_to "Cadastre um novo caminhão", new_admin_truck_path, class: "btn btn-success" %>
   </div>
</div>
<br>
<br>
<div class="row">
  <% if @trucks.all.empty? %>
    <p>Casdastre um Caminhão<p>
  <% else %>
    <% @trucks.each do |truck| %>
        <div class="col-xs-12 col-md-6">
          <div class="truck-card">
            <p><strong><%= truck.name  %></strong></p>
            <p>Vagas Totais: <%= truck.vacancies %></p>
            <p>Viagens cadastradas: <%= truck.trips.count %></p>
            <%= image_tag "truck-card.jpg", class: "card-truck-avatar" %>
            <br>
            <div class="truck-card-links", class="list-inline">
              <%= link_to "Viagens", list_admin_truck_trips_path(truck), class: "btn btn-success btn-xs"  %>
              <%= link_to "Editar", edit_admin_truck_path(truck), class: "btn btn-primary btn-xs"  %>
              <%= link_to "Remover", admin_truck_path(truck), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
            </div>
          </div>
      </div>
    <% end %>
  <% end %>
</div>
