<h1>Caminhões Cadastrados</h1>
<br>
<%= link_to "Cadastre um novo caminhão", new_admin_truck_path, class: "btn btn-primary" %>
<br>
<br>
<div class="row">
  <% @trucks.each do |truck| %>
    <div class="col-xs-12 col-md-6">
      <div class="truck-card">
        <h3><%= truck.name  %></h3>
        <p>Tamanho: <%= truck.vacancies %> veículos</p>
        <div >
          <%= link_to "Viagens", list_admin_truck_trips_path(truck), class: "btn btn-primary"  %>
          <%= link_to "Deletar Caminhão", admin_truck_path(truck), method: 'delete', class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
