<div class="container">
  <h2 align="center">Perfil de <%= resource_name.to_s.humanize %>  - Mantenha seus dados atualizados</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">

    <div class="row" class="col-md-12" align="center">
      <%= f.input :category, as: :radio_buttons, collection: ["Tenho a cegonha e faço transportes", "Quero transportar meu carro para outra cidade"]%>
    </div>

    <div class="row" class="col-md-12">
      <div class="col-md-6">
        <%= f.input :name %>
        <%= f.input :email, required: true, autofocus: true %>
      </div>
      <div class="col-md-6">
        <%= f.input :phone %>
        <%= f.input :address %>
      </div>
    </div>

    <div class="row" class="col-md-12">


      <div class="col-md-6">


        <div class="row" align="center">
          <div class="form-actions col-md-5">
            <%= f.button :submit, "Atualizar meu dados", class: "btn btn-primary" %>
          </div>
          <div class="col-md-1">
            <%= link_to "Voltar sem atualizar", :back, class: "btn btn-danger" %>
          </div>
        </div>

      </div>

      <div class="col-md-6">
        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
      </div>

    </div>

    <% end %>
  </div>

    <div class="row" class="col-md-12" align="center">
  <p>Não tem carro nem cegonha? <%= link_to "Não quero mais usar o AirTruck", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>
  </div>

</div>
